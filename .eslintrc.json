{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": "7",
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "overrides": [
    {
      "files": [
        "webpack.config.js",
        "webpack.config.*.js",
        "test/**/*.js",
        "prod/js/server.js"
      ],
      "env": {
        "node": true
      }
    }
  ],
  "globals": {
    "ga": true
  }
}
